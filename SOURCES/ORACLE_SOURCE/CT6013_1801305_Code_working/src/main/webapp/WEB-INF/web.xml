<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--Registration connections-->
    <servlet>
        <servlet-name>RegistrationOracle</servlet-name>
        <servlet-class>RegistrationOracle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationOracle</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeacherRegistrationOracle</servlet-name>
        <servlet-class>TeacherRegistrationOracle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TeacherRegistrationOracle</servlet-name>
        <url-pattern>/teacherRegistration</url-pattern>
    </servlet-mapping>

    <!--Login connection-->
    <servlet>
        <servlet-name>LoginOracle</servlet-name>
        <servlet-class>LoginOracle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginOracle</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--Grace updating connection-->
    <servlet>
        <servlet-name>GradeUpdateOracle</servlet-name>
        <servlet-class>GradeUpdateOracle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GradeUpdateOracle</servlet-name>
        <url-pattern>/addGrade</url-pattern>
    </servlet-mapping>

    <!--Student home connection-->
    <servlet>
        <servlet-name>StudentHomeOracle</servlet-name>
        <servlet-class>StudentHomeOracle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentHomeOracle</servlet-name>
        <url-pattern>/student_home</url-pattern>
    </servlet-mapping>

    <!--Lecturer connections-->
    <servlet>
        <servlet-name>TeacherViewOracle</servlet-name>
        <servlet-class>TeacherViewOracle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TeacherViewOracle</servlet-name>
        <url-pattern>/teacherView</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeacherViewStudentOracle</servlet-name>
        <servlet-class>TeacherViewStudentOracle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TeacherViewStudentOracle</servlet-name>
        <url-pattern>/teacherViewSpecific</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeacherViewClassOracle</servlet-name>
        <servlet-class>TeacherViewClassOracle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TeacherViewClassOracle</servlet-name>
        <url-pattern>/teacherViewClass</url-pattern>
    </servlet-mapping>

</web-app>