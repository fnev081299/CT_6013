<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Registration connections-->
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>Registration</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeacherRegistration</servlet-name>
        <servlet-class>TeacherRegistration</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TeacherRegistration</servlet-name>
        <url-pattern>/teacherRegistration</url-pattern>
    </servlet-mapping>

    <!--Login connection-->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--Student home connection-->
    <servlet>
        <servlet-name>StudentHome</servlet-name>
        <servlet-class>StudentHome</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentHome</servlet-name>
        <url-pattern>/student_home</url-pattern>
    </servlet-mapping>

    <!--Lecturer home-->
    <servlet>
        <servlet-name>TeacherView</servlet-name>
        <servlet-class>TeacherView</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TeacherView</servlet-name>
        <url-pattern>/teacherView</url-pattern>
    </servlet-mapping>

    <!--Lecturer functions-->
    <servlet>
        <servlet-name>TeacherViewClass</servlet-name>
        <servlet-class>TeacherViewClass</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TeacherViewClass</servlet-name>
        <url-pattern>/teacherViewClass</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeacherViewStudent</servlet-name>
        <servlet-class>TeacherViewStudent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TeacherViewStudent</servlet-name>
        <url-pattern>/teacherViewSpecific</url-pattern>
    </servlet-mapping>

    <!--Grade updating -->
    <servlet>
        <servlet-name>GradeUpdate</servlet-name>
        <servlet-class>GradeUpdate</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GradeUpdate</servlet-name>
        <url-pattern>/addGrade</url-pattern>
    </servlet-mapping>
</web-app>